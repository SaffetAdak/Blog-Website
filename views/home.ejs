<%- include("partials/header.ejs") %>

<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% if (locals.postContent) { %>
  <% postContent.forEach(function (content) { %>
    <h1><%= content.title %></h1>
    <p>
      <%= content.textArea.substring(0, 100) + "..." %>
      <a href="/posts/<%= content.title %>">Read More</a>
    </p>
  <% }); %>
<% } %>

<%- include("partials/footer.ejs") %>
